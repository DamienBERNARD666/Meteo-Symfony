{% extends 'base.html.twig' %}

{% block title %}
Météo {% if weather %}
						de {{ weather.nom }}
					{% else %}
						None
					{% endif %}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row pt-4 pb-4">
			<div class="col-12 jumbotron">
				<h1 class="text-center">
					Bienvenue sur la page Météo {% if weather %}
						de {{ weather.nom }}
					{% else %}
						None
					{% endif %}
					<i class="fas fa-cloud-sun"></i>
				</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				<div class="form-group " id="panel">
            

				</div>
				<div class="col-12"></div>
			</div>

		</div>
	</div>
	<div class="container pt-5">
		<div class="row">
			<div class="col-12 col-sm-6 card">
				<h4 class="text-center card-header">Température
					<i class="fas fa-thermometer-full"></i>
				</h4>
				<h4 class="text-center card-title">
					{% if weather %}
						{{ weather.temperature }}°C
					{% else %}
						None
					{% endif %}
				</h4>
				<div class="container-fluid card-body">
					<div class="row">
						<div class="col-6 border-top d-flex align-items-center">
							<p class="pr-4">
								{% if weather %}
									min
									<br>
									{{ weather.temperature_min }}°C
								{% else %}
									None
								{% endif %}
							</p>
							<p class="pl-4">
								{% if weather %}
									max
									<br>
									{{ weather.temperature_max }}°C
								{% else %}
									None
								{% endif %}
							</p>
						</div>
						<div class="col-6  border-top d-flex justify-content-between align-items-center">
							<p>
								Précipitations
								<br>
								{% if weather %}
									{{ weather.precipitations }}
									%
								{% else %}
									None
								{% endif %}
							</p>
							<p>
								Humidité
								<br>
								{% if weather %}
									{{ weather.humidite }}
									%
								{% else %}
									None
								{% endif %}
							</p>
						</div>
					</div>
				</div>

			</div>
			<div class="col-12 col-sm-6 card">
				<h4 class="text-center card-header">Vent
					<i class="fas fa-wind"></i>
				</h4>
				<h4 class="text-center card-title">
					{% if weather %}
						{{ weather.vent }}
						km/h
					{% else %}
						None
					{% endif %}
				</h4>
				<div class="container card-body">
					<div class="row">
						<div class="col-12 border-top">
							<p>
								Pression atmosphérique:
								{% if weather %}
									<br>
									{{ weather.pression }}
									hPa
								{% else %}
									None
								{% endif %}
							</p>
						</div>
					</div>
				</div>
			</div>


		</div>
	</div>

	<div class="container p-1">
      <div class="row">
       <div class="col-12">
       <div id="searchTown"> </div>
      <div class="container d-none"><pre style="max-height:235px"><code  id="suggestions" style="font-size: small;"></code></pre></div>
      </div>
      </div>
		<div id="map" style="position:absolute; width:47%; height:40%; background:grey"></div>

	</div>
{% endblock %}

